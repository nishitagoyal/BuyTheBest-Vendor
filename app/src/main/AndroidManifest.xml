<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.something.vendorapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bb_big_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bb_big_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.VendorApp">
        <activity
            android:name=".activity.ItemActivity"
            android:exported="true"
            android:theme="@style/Theme.VendorApp.NoActionBar"/>
        <activity
            android:name=".activity.CatagoriesActivity"
            android:exported="true"
            android:theme="@style/Theme.VendorApp.NoActionBar"/>
        <activity
            android:name=".activity.AddCategoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddItemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.VendorApp.NoActionBar" />
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.VendorApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.VendorApp.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>